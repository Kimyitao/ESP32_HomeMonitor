#include <Arduino.h>

//因为对引脚操作传的参数是int类型，所以定义一个数组方便操作
int pin_list[5]={5,18,19,21,22};
//下面是常见的计算数组长度的方法，全部字节长度/单个元素字节长度，在面试题中常见
int num=sizeof(pin_list)/sizeof(pin_list[0]);


void setup() {
  //使用for循环逐个引脚初始化为输出模式
  for (size_t i = 0; i < num; i++)
  {
    pinMode(pin_list[i],OUTPUT);
  }
  

}

void loop() {
  //逐个点亮LED，置为高电平
  for (size_t i = 0; i < num; i++)
  {
    digitalWrite(pin_list[i],HIGH);
    delay(100);
  }
  //逐个熄灭LED，置为低电平
  for (size_t i = 0; i < num; i++)
  {
    digitalWrite(pin_list[i],LOW);
    delay(100);
  }
  
}


